<div class="mt-4">
  <div>
    <h3>My photo</h3>
    {{#if deletedCount}}
    <a href="/me/trash/courses">Bin ({{deletedCount}})</a>
    {{/if}}
  </div>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Created At</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td><img src="{{this.image}}" alt="" class="img-column" /></td>
          <td>{{this.name}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href="/courses/{{this._id}}/edit" class="btn btn-link">Edit</a>
            <a
              href="button"
              class="btn btn-link"
              data-toggle="modal"
              data-target="#delete-course-modal"
              data-id="{{this._id}}"
            >Delete</a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5" class="text-center">Not photo yet 

          <a href="/courses/create">click here to create photo</a>

          </td>

        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{! confirm delete }}

<div id="delete-course-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete photo?</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure?</p>
      </div>
      <div class="modal-footer">
        <button
          id="btn-delete-course"
          type="button"
          class="btn btn-danger"
        >Delete</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Cancel</button>
      </div>
    </div>
  </div>
</div>

{{! delete hidden form }}
<form method="POST" name="delete-course-form"></form>

<script>

  document.addEventListener('DOMContentLoaded',function(){ 
  var courseId 
  var deleteForm =document.forms['delete-course-form']; 
  var btnDeleteCourse =
  document.getElementById('btn-delete-course')
  $('#delete-course-modal').on('show.bs.modal', function (event) { 
  var button = $(event.relatedTarget) 
  courseId = button.data('id') }) 
  btnDeleteCourse.onclick= function(){ deleteForm.action = '/courses/' + courseId + '?_method=DELETE'
  deleteForm.submit(); 
  } 
  });
</script>